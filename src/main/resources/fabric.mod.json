{
  "schemaVersion": 1,
  "id": "lasertag",
  "version": "${version}",

  "name": "Lasertag mod",
  "description": "A mod to play lasertag in minecraft with your friends.",
  "authors": [
    "Étienne Muser aka Der_fbs aka fibs",
    "Kevin Janzen aka ZaboKev aka K e v",
    "Timon Maier aka _Timon aka Dr. Diarrhö",
    "ValliHalli"
  ],
  "contributors": [
    "Robert Senin aka Sogeking_1024",
    "Aaron Werner aka Sol Astrum"
  ],

  "contact": {
    "sources": "https://github.com/efibs/mc-lasertag-mod",
    "issues": "https://github.com/efibs/mc-lasertag-mod/issues",
    "discord": "https://discord.gg/SPbV8P2kHN"
  },

  "license": "GPL-3.0 license",
  "icon": "assets/lasertag/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "de.kleiner3.lasertag.LasertagMod"
    ],
	"client": [
	  "de.kleiner3.lasertag.LasertagModClient"
	]
  },
  "mixins": [
    "lasertag.mixins.json"
  ],
  "custom": {
	"loom:injected_interfaces": {
		"net/minecraft/server/MinecraftServer": ["de/kleiner3/lasertag/lasertaggame/ILasertagServerManagerAccessor"],
		"net/minecraft/entity/player/PlayerEntity": ["de/kleiner3/lasertag/lasertaggame/ILasertagPlayer", "de/kleiner3/lasertag/client/screen/ILasertagGameManagerScreenOpener", "de/kleiner3/lasertag/client/screen/ILasertagTeamSelectorScreenOpener"],
		"net/minecraft/client/network/ClientPlayerEntity": ["de/kleiner3/lasertag/client/screen/ILasertagGameManagerScreenOpener", "de/kleiner3/lasertag/client/screen/ILasertagTeamSelectorScreenOpener"],
        "net/minecraft/world/World": ["de/kleiner3/lasertag/common/util/fastiter/IFastWorldIter"]
    }
  },

  "accessWidener" : "lasertag.accesswidener",

  "depends": {
    "fabricloader": ">=0.14.9",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "sodium": "*",
	"phosphor": "*",
	"lithium": "*"
  }
}
